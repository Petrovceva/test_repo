#     b -= 1
#     if b > 0:
#         return sum (a, b)
#     else:
#         return a
# a = 2
# b = 5
# print(sum(a, b))

# Вар.2
def sum (a, b):
    if a == 0:
        return b
    return sum (a-1, b+1)
print(sum(10, 7))
